<head>
<style type="text/css">
th,td {display: block; margin-top: auto; margin-bottom: auto;
  margin-left: 0px; text-align: left; width: 100%;
  padding-bottom: 7px; padding-left: 0px; padding-right: 5px;
  padding-bottom: 5px;
}
</style>
</head>
<h1>編集</h1>
<br>
<h2>物件編集</h2>

<%= form_for(@house) do |f| %>
  <% if @house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "物件名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "賃料" %>
    <%= f.number_field :rent %><%= "円" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :adress %>
  </div>

  <div class="field">
    <%= f.label "築年数" %>
    <%= f.number_field :age %><%= "年" %>
  </div>

  <div class="field">
    <%= f.label "備考" %>
    <%= f.text_area :content %>
  </div>

<br>
<h3>最寄駅</h3>
  <table class="table table-striped table-bordered table-hover">
    <tbody>
      <%= f.nested_fields_for :stations, wrapper_tag: :tr do |q| %>
        <th>路線名</th>
        <td><%= q.text_field :route_name, class: 'form-control' %></td>
        <th>駅名</th>
        <td><%= q.text_field :station_name, class: 'form-control' %></td>
        <th>徒歩分数</th>
        <td><%= q.number_field :walking_minutes , class: 'form-control' %><%= "分"%></td>
        <td><%= q.remove_nested_fields_link '表示を消す', class: 'btn btn-danger', role: 'button' %></td>
      <% end %>
    </tbody>
  </table>
<%= f.add_nested_fields_link :stations, '最寄駅を追加する', class: 'btn btn-primary', role: 'button' %>

  <div class="actions">
    <%= f.submit "物件を登録する" %>
  </div>

<% end %>

<%= link_to '詳細', @house %>
<%= link_to '戻る', houses_path %>
