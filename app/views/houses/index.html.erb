<p id="notice"><%= notice %></p>

<h1>一覧</h1>
<br>
<h2>物件一覧</h2>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tfoot>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.rent %><%="円"%></td>
        <td><%= house.adress %></td>
        <td><%= house.age %><%="年"%></td>
        <td><%= house.content %></td>
        <td><%= link_to '詳細', house %></td>
        <td><%= link_to '編集', edit_house_path(house) %></td>
        <td><%= link_to '削除', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tfoot>
</table>

<br>

